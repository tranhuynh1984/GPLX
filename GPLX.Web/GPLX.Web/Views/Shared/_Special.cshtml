@using System.Security.Claims
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var username = User.Identity.Name;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@(ViewData["PageTitle"])</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <!-- Font Awesome Icons -->
    <link href="~/css/font-awesome-pro/css/all.css" rel="stylesheet" />
    @RenderSection("top", false)


    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/node_modules/admin-lte/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <!-- Theme style -->
    @RenderSection("middle", false)
    <link rel="stylesheet" href="~/node_modules/admin-lte/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/site.css">

    @RenderSection("bottom", false)
    <link rel="icon" type="image/png" sizes="16x16" href="~/css/images/logochuan-16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/css/images/logochuan-32.png">
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                @await Component.InvokeAsync("SwitchUnit")

                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="....." aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="button">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>

                <!-- Messages Dropdown Menu -->
                <!-- Notifications Dropdown Menu -->

                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>

            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/index.html" class="brand-link" style="border-bottom-color: #ffffff; background-color: #0066b3;">
                <img src="~/css/images/logochuan-01.png" alt="MED Information System (MIS)" class="brand-image img-circle elevation-3">
                <span class="brand-text font-weight-bold text-white">MIS</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex" style="border-bottom-color: #ffffff">
                    <div class="image">
                        <img src="https://picsum.photos/150/150" class="img-circle elevation-2" alt="">
                    </div>
                    <div class="info">
                        <a href="/Users/Profile" class="d-block">@username</a>
                        <p class="text-white mb-0">@ViewBag.NameJob</p>
                    </div>
                </div>


                <!-- Sidebar Menu -->
                <nav>
                    @await Component.InvokeAsync("SideBar")
                </nav>


                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            @*@if (!string.IsNullOrEmpty(ViewData["PageTitle"] as string))
                {*@
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@(ViewData["PageTitle"])</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">

                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            @*  *@

            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Medlatec Group
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; @(DateTime.Now.Year) <a href="http://mis.medcom.vn/">Medlatec Group</a>.</strong>
        </footer>
    </div>
    <partial name="~/Views/Partial/_ConfirmModal.cshtml" />
    <!-- ./wrapper -->
    <script src="~/js/language.js" type="text/javascript"></script>
    <!-- jQuery -->
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    @RenderSection("middle_scripts", false)

   
    <script src="~/node_modules/moment/min/moment.min.js"></script>

    <!-- AdminLTE App -->
    <script src="~/node_modules/admin-lte/plugins/sweetalert2/sweetalert2.min.js"></script>

    <script src="~/node_modules/admin-lte/dist/js/adminlte.min.js"></script>
    <script src="~/js/common.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
