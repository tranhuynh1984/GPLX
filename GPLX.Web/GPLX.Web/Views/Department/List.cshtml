
@{
    ViewData["Title"] = "Danh sách phòng ban";
    ViewData["PageTitle"] = "Danh sách phòng ban";
}
@model CostEstimateItemListModel
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-between" id="requestSearchForm">
                    <div class="col-md-6 col-6 col-sm-6">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Từ khóa:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control form-control-sm" placeholder="Nhập từ khóa để tìm kiếm" id="requestSearchKeywords" name="Keywords">
                                        <div class="input-group-append">
                                            <button class="btn btn-sm btn-default" type="button" id="requestSearchButton">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="float-right">
                            <div class="form-group m-0">
                                <label>Trạng thái:</label>
                            </div>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-default" id="lableStats">@(Model.DefaultStatsName)</button>
                                <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown">
                                    <span class="sr-only">Chọn trạng thái</span>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" role="menu" id="requestSearchStats" name="searchStats">
                                    @{
                                        foreach (var costStats in Model.Stats)
                                        {
                                            <a class="dropdown-item" prop-stats="@(costStats.Value)" @(costStats.Value == Model.DefaultStats ? "selected" : "") onclick="javascript: void (0);">
                                                @(costStats.Name)
                                            </a>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12">
        <div class="card">
            <div class="card-header">
                <button class="btn btn-sm med-btn-outline-primary" id="btnCreate">
                    <i class="fad fa-plus-circle"></i> Thêm phòng ban
                </button>
            </div>
            <div class="card-body">
                <table id="tblList" class="table table-sm table-hover stripe table-bordered nowrap" style="width: 100%">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên phòng ban</th>
                        <th>Người tạo</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="~/Views/Partial/_ExtraLargeModal.cshtml" />

