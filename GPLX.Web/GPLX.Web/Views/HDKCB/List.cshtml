
@{
    ViewData["Title"] = "Danh sách hợp đồng khám chữa bệnh";
    ViewData["PageTitle"] = "Danh sách hợp đồng khám chữa bệnh";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-between" id="requestSearchForm">
                    <div class="col-md-12 col-12 col-sm-12">
                        <div class="row">
                            <div class="col-md-3 col-sm-12">
                                <div class="form-group">
                                    <label>Mã HĐ KCB:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control form-control-sm" placeholder="Mã hợp đồng" id="txtMaHD" name="Keywords">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label>Tên hợp đồng:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control form-control-sm" placeholder="Tên hợp đồng" id="txtTenHD" name="Keywords">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-6">
                                <div class="form-group">
                                    <label>Trạng thái:</label>
                                    <div class="input-group">
                                        <select class="form-control form-control-sm" id="ddlStatus">
                                            <option value="-1">Tất cả</option>
                                            <option value="0">Vô hiệu</option>
                                            <option value="1">Kích hoạt</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-6">
                                <label> &nbsp;</label>
                                <div class="form-group">
                                    <div class="input-group btn-control" >
                                        <button class="form-control form-control-sm" id="requestSearchButton">Tìm kiếm</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-6">
                                <label> &nbsp;</label>
                                <div class="form-group">
                                    <div class="input-group btn-control">
                                        <button class="form-control form-control-sm" id="btnExportExcel">Xuất Excel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-sm-12">
                                <div class="form-group">
                                    <label>IDHD:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control form-control-sm" placeholder="ID hợp đồng" id="txtIDHD" name="Keywords">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label>Ngày ký từ:</label>
                                    <div class="input-group">
                                        <input type="date" class="form-control form-control-sm" placeholder="Ngày ký từ" id="txtND" name="Keywords">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label>Đến:</label>
                                    <div class="input-group">
                                        <input type="date" class="form-control form-control-sm"  placeholder="Ngày ký đến" id="txtNS" name="Keywords">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12">
        <div class="card">
            <div class="card-header">
                <button class="btn btn-sm med-btn-outline-primary" id="btnSync">
                    <i class="fad fa-plus-circle"></i> Đồng bộ dữ liệu
                </button>
                <div style="width:200px; display:inline-block; float:right">
                    <input type="text" class="form-control form-control-sm" placeholder="Tìm nhanh" id="txtTenHDTimNhanh"  name="Keywords">
                </div>
            </div>
            <div class="card-body">
                <table id="tblList" class="table table-sm table-hover stripe table-bordered nowrap" style="width: 100%">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>IDHD</th>
                            <th>Mã HD</th>
                            <th>Tên HD</th>
                            <th>Sử dụng</th>
                            <th>TG bắt đầu</th>
                            <th>TG kết thúc</th>
                            <th>Loại HD</th>
                            <th>Người sửa</th>
                            <th>Thời gian sửa</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="~/Views/Partial/_FullScreen.cshtml"/>

