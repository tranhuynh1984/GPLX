@model GPLX.Database.Models.UsersSessionModel
<div class="row">
    <div class="col-md-3">
        <!-- Profile Image -->
        <div class="card card-primary card-outline">
            <div class="card-body box-profile">
                <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle" src="https://picsum.photos/150/150" alt="@Model?.UserName">
                </div>
                <h3 class="profile-username text-center">@Model?.UserName</h3>
                <p class="text-muted text-center">@Model?.Positions?.FirstOrDefault()?.PositionName</p>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- /.card -->
    </div>
    <!-- /.col -->
    <div class="col-md-9">
        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link" href="#settings" data-toggle="tab">Cấu hình</a>
                    </li>
                </ul>
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="settings">
                        <form class="form-horizontal" id="formSettings">
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 col-form-label">Tài khoản ký số</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputAccount" name="inputAccount" autocomplete="off" placeholder="Tài khoản ký số" value="@Model?.AccountSignature">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Mật khẩu</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="inputPassword" name="inputPassword"  autocomplete="off" placeholder="Mật khẩu">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputName2" class="col-sm-2 col-form-label">Nhập lại</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="inputRePass" name="inputRePass" autocomplete="off" placeholder="Nhập lại mật khẩu">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-10">
                                    <button type="button" class="btn btn-outline-info" id="btnUpdate">Cập nhật</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div><!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>

@section scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
    <script src="~/js/jquery.customValidate.js" type="text/javascript"></script>
    <script src="~/js/users/profile.js"></script>
}
